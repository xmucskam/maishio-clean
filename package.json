{
  "name": "maishio-clean",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/maishio/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "npm run build:main && wait-on http://localhost:5173 && NODE_ENV=development electron .",
    "build:main": "tsc -p tsconfig.main.json && mkdir -p dist/services/lipsync && cp services/lipsync/rhubarb.js dist/services/lipsync/",
    "build": "npm run build:main && vite build"
  },
  "dependencies": {
    "electron-is-dev": "^3.0.1",
    "node-fetch": "^3.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "typescript": "^5.5.0",
    "vite": "^5.4.0",
    "wait-on": "^7.0.0"
  }
}
